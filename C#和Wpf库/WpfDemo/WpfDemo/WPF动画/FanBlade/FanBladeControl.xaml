<UserControl x:Class="WpfDemo.WPF动画.FanBlade.FanBladeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfDemo.WPF动画.FanBlade"
             mc:Ignorable="d" 
             d:DesignHeight="130" d:DesignWidth="130">
    <Image x:Name="image" VerticalAlignment="Center" HorizontalAlignment="Center" Width="130" Height="130" Stretch="Fill" RenderTransformOrigin="0.5,0.5">
        <Image.RenderTransform>
            <TransformGroup>
                <ScaleTransform x:Name="transform_scale"/>
                <SkewTransform/>
                <RotateTransform />
                <TranslateTransform/>
            </TransformGroup>
        </Image.RenderTransform>
    </Image>
</UserControl>
