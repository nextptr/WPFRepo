<Window x:Class="CvsDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CvsDemo"
        mc:Ignorable="d"
           Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="3"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <UniformGrid Columns="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Name="lab_root" Content="ROOTPATH:"/>
            <ListView Name="ls_view" Grid.Row="1"/>

        </Grid>
        <UniformGrid Rows="10" Columns="3">
            <Button Name="btn_raed" Content="读取"/>
            <Button Name="btn_write" Content="写入"/>
            <Button Name="btn_lastLoad" Content="LastLoadFile"/>
        </UniformGrid>

    </UniformGrid>
</Window>
