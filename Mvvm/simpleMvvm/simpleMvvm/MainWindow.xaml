<Window x:Class="simpleMvvm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:simpleMvvm"
        xmlns:views="clr-namespace:simpleMvvm.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <TabControl TabStripPlacement="Bottom">
        <TabItem>
            <TabItem.Header>
                <Label Content="不使用Mvvm的界面程序" FontSize="18" FontWeight="Bold"/>
            </TabItem.Header>
            <views:NotUseMvvm />
        </TabItem>
        <TabItem>
            <TabItem.Header>
                <Label Content="使用Mvvm的界面程序" FontSize="18" FontWeight="Bold"/>
            </TabItem.Header>
            <views:UseMvvmModel/>
        </TabItem>
    </TabControl>
</Window>
