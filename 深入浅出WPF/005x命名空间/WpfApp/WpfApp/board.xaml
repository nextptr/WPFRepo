<UserControl x:Class="WpfApp.board"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UniformGrid Columns="2">
        <Border BorderThickness="2" BorderBrush="Black" >
            <TextBlock TextWrapping="Wrap" Name="txt_box1" x:FieldModifier="public"  Text="x:FieldModifier=public;此控件为共有、外部可获取此控件"   />
        </Border>
        <Border BorderThickness="2" BorderBrush="Black" >
            <TextBlock TextWrapping="Wrap" Name="txt_box2" x:FieldModifier="private" Text="x:FieldModifier=private;此控件为私有、外部无法获取此控件"  />
        </Border>
    </UniformGrid>
</UserControl>
