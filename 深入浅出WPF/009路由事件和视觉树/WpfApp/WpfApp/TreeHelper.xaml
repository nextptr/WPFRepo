<UserControl x:Class="WpfApp.TreeHelper"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp"
             mc:Ignorable="d" 
             d:DesignHeight="618" d:DesignWidth="1000">
    <UniformGrid Columns="2">
        <ListBox Name="ls_box"/>
        <UniformGrid Rows="2">
            <Grid Name="mid_grid_logic">
                <Button Width="210" Height="45" Content="LogicTreeHelper" Name="btn_logic" />
            </Grid>
            <Grid Name="mid_grid_visua">
                <Button Width="210" Height="45" Content="VisualTreeHelper" Name="btn_visual" />
            </Grid>
        </UniformGrid>
    </UniformGrid>
</UserControl>
